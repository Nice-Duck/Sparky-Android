<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/parent_layout_padding"
    tools:context=".view.sign_in.SignInActivity">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:src="@drawable/ic_sparky"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디/이메일"
        android:layout_marginVertical="7dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/sign_in_edit_txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in_input"
        android:hint="example@sparky.com"
        android:maxLength="20"
        android:paddingVertical="15dp"
        android:paddingStart="18dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_marginBottom="17dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:layout_marginVertical="7dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/sign_in_edit_txt_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in_input"
        android:hint="영문/숫자포함 8~20자"
        android:maxLength="20"
        android:paddingVertical="15dp"
        android:paddingStart="18dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginBottom="21dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="로그인"
        android:textStyle="bold"
        android:paddingVertical="15dp"
        android:textColor="@color/white"/>

</LinearLayout>