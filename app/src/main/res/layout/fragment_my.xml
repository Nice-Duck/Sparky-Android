<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".view.main.fragment.MyFragment">

        <LinearLayout
            android:id="@+id/my_LL"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 스크랩"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="33dp"
                android:layout_gravity="center_horizontal"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/my_edit_txt"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_400"
                    android:drawableStart="@drawable/edit_txt_inner_search"
                    android:hint="@string/input_require_search"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/my_img_search_delete_btn"
                    android:layout_marginEnd="10dp"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_delete"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/my_LL_filter_add_btn"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tag_button"
                    android:backgroundTint="@color/sparky_orange">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_marginEnd="4dp"
                        android:text="필터"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_plus_white"/>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/my_recyclerview_filter"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_txt_count"
                    android:textColor="@color/gray_700"
                    android:textSize="12sp"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <RadioGroup
                    android:id="@+id/my_radio_group"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/my_radio_btn1"
                        android:layout_marginHorizontal="12dp"
                        android:button="@null"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/scrap_sort_btn_selector" />

                    <RadioButton
                        android:id="@+id/my_radio_btn2"
                        android:button="@null"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/scrap_sort_btn_selector2" />
                </RadioGroup>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/my_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/my_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shimmer_auto_start="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/loading_item3"/>
                    <include layout="@layout/loading_item3"/>
                    <include layout="@layout/loading_item3"/>
                    <include layout="@layout/loading_item3"/>
                    <include layout="@layout/loading_item3"/>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>


</androidx.core.widget.NestedScrollView>